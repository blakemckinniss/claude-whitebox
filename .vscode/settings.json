{
    // Python analysis - Pylance
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.indexing": true,
    "python.analysis.autoImportCompletions": true,
    "python.analysis.extraPaths": [".claude/lib"],

    // Testing - pytest
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [".claude/tests"],

    // Exclude disposable/generated paths from analysis
    "python.analysis.exclude": [
        ".claude/tmp/**",
        ".claude/session/**",
        ".claude/.venv/**"
    ],

    // File exclusions from explorer
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        ".ruff_cache": true,
        ".mypy_cache": true,
        ".claude/.venv": true
    },

    // Search exclusions
    "search.exclude": {
        ".claude/tmp/**": true,
        ".claude/session/**": true,
        ".ruff_cache/**": true,
        ".mypy_cache/**": true,
        ".claude/.venv/**": true
    }
}
